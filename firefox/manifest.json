{
  "manifest_version": 2,
  "name": "Figma PR Extension",
  "version": "1.0.0",
  "description": "Automatically process Figma links in GitHub PR descriptions and generate design specs",
  
  "permissions": [
    "storage",
    "activeTab",
    "https://github.com/*",
    "https://api.figma.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*",
        "https://github.com/*/compare/*"
      ],
      "js": ["debug.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Figma PR Extension"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "applications": {
    "gecko": {
      "id": "figma-pr-extension@wildmat.github.io",
      "strict_min_version": "109.0"
    }
  }
}