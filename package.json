{
  "name": "figma-pr-browser-extension",
  "version": "1.0.6",
  "description": "Browser extension that processes Figma links in GitHub PR descriptions",
  "scripts": {
    "build": "node build.js",
    "build:chrome": "node build.js chrome",
    "build:firefox": "node build.js firefox",
    "clean": "node build.js clean",
    "dev": "node build.js && echo 'Built both extensions. Load the chrome/ or firefox/ directory in your browser.'",
    "lint": "npx prettier --check \"**/*.{js,html,json,md,css}\" --ignore-path .gitignore",
    "lint:fix": "npx prettier --write \"**/*.{js,html,json,md,css}\" --ignore-path .gitignore",
    "version:bump": "node scripts/bump-version.js",
    "prepare": "husky"
  },
  "keywords": [
    "figma",
    "github",
    "browser-extension",
    "chrome",
    "firefox"
  ],
  "author": "wildmat",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "*.{js,html,json,md,css}": [
      "npx prettier --write"
    ]
  }
}
